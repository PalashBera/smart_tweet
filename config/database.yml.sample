default: &default
  adapter: mysql2
  encoding: utf8mb4
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: root
  password:
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: smart_tweet_development

test:
  <<: *default
  database: smart_tweet_test

production:
  <<: *default
  database: smart_tweet_production
  username: smart_tweet
  password: <%= ENV['SMART_TWEET_DATABASE_PASSWORD'] %>
