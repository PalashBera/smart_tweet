<% provide(:title, "Email Confirmation") %>

<tr>
  <td style="color: #153643; font-family: sans-serif; font-size: 16px; line-height: 22px;">
    <p>Hey <%= @resource.full_name %>,</p>
    <p>You can confirm your account email through the link below:</p>
  </td>
</tr>

<tr>
  <td style="padding: 20px 0 20px 0;">
    <table border="0" cellspacing="0" cellpadding="0">
      <tr height="45">
        <td>
          <a href="<%= confirmation_url(@resource, confirmation_token: @token) %>" target="_blank" class="primary-button" style="background-color: #00BCD4; border-radius: 25px; color: #FFFFFF; text-decoration: none; text-align: center; font-size: 18px; font-family: sans-serif; font-weight: bold; padding: 12px 30px;">Confirm my account</a>
        </td>
      </tr>
    </table>
  </td>
</tr>

<tr>
  <td style="color: #153643; font-family: sans-serif; font-size: 16px; line-height: 22px;">
    <p>Thanks,</p>
    <p>Team Smart Tweet</p>
  </td>
</tr>
