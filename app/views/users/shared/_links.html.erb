<% if controller_name != "sessions" %>
  <p class="mb-1">Do you have an account? <%= link_to "Login", new_session_path(resource_name) %></p>
<% end %>

<% if devise_mapping.registerable? && controller_name != "registrations" %>
  <p class="mb-1">Don't you have an account? <%= link_to "Signup", new_registration_path(resource_name) %></p>
<% end %>

<% if devise_mapping.confirmable? && controller_name != "confirmations" %>
  <p class="mb-1">Didn't receive confirmation email? <%= link_to "Click here", new_confirmation_path(resource_name) %></p>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != "unlocks" %>
  <p class="mb-1">Didn't receive unlock email? <%= link_to "Click here", new_unlock_path(resource_name) %></p>
<% end %>

<% if devise_mapping.omniauthable? %>
  <hr>

  <% resource_class.omniauth_providers.each do |provider| %>
    <p class="mb-1">Sign in with <%= link_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %></p>
  <% end %>
<% end %>
