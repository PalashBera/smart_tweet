<% provide(:title, "Forgot Password") %>

<div class="row justify-content-center">
  <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title mb-5 text-center">Forgot Password</h3>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, class: "form-control", autofocus: true, required: true, placeholder: "Email Address", autocomplete: "email", maxlength: 100 %>
          </div>

          <br />
          <%= f.submit "Send Instruction", class: "btn btn-primary btn-xs-block", data: { disable_with: "Sending..." } %>
        <% end %>

        <hr>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
