<% provide(:title, "Change Password") %>

<div class="row justify-content-center">
  <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title mb-5 text-center">Change Password</h3>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <%= render "shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", autofocus: true, required: true, placeholder: "Password", minlength: 6, maxlength: 128, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <small id="passwordHelp" class="form-text text-muted">Password length should be minimum <%= @minimum_password_length %> characters.</small>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Password Confirmation", minlength: 6, maxlength: 128, autocomplete: "current-password" %>
          </div>

          <br />
          <%= f.submit "Change Password", class: "btn btn-primary btn-xs-block", data: { disable_with: "Changing..." } %>
        <% end %>

        <hr>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
