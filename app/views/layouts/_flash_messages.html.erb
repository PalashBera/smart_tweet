<% flash.each do |type, message| %>
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8">
      <div class="alert alert-<%= message_type(type) %> alert-dismissible fade show mb-4 flash-alert" role="alert">
        <strong><%= flash_message_prefix(message_type(type)) %></strong> <%= message %>
        <%= image_tag "cancel.svg", class: "close", "data-dismiss": "alert" %>
      </div>
    </div>
  </div>
<% end %>
